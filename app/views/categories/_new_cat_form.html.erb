
<div class='contain'>
  <div>
    <br>
    <br>
  </div>
  <div class='col-md-4 col-md-offset-4 well category-form'>
    <%= form_for @cat do |f| %>
      <div class="form-group">
        <%= f.label :name, 'Job Category' %>
        <%= f.text_field :name, class: "form-control" %>
        <span class='error-span'><%= @cat.errors[:name][0] if @cat.errors[:name] %></span>
      </div>
      <div>
        <%= f.submit "Submit", class: "btn btn-default " %>
      </div>
    <% end %>
  </div>
</div>