<% @page_title = 'Min Side' %>
<%= render 'part1' %>
<div class="well col-md-6 col-md-offset-3">
  <h3 class="text-center">Endre Passord</h3>
  <%= form_for(@user, url: change_password_dashboard_path) do |f| %>
    <input type="text" style="display:none">
    <input type="password" style="display:none">

    <div class="form-group">
      <%= label_tag 'gammelt_passord' %>
      <%= password_field_tag 'gammelt_passord', nil, class: 'form-control'  %>
    </div>
    <div class="form-group">
      <%= f.label :password, 'Nytt Passord' %>
      <%= f.password_field :password, class: 'form-control'  %>
    </div>
   
    <div class="form-group">
      <%= f.label :password_confirmation, 'Bekreft nytt passord' %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>   
    <%= f.submit "Endre Passord", class: "btn btn-default btn-block register-button" %> 
    <hr class="hr-new-user"/>    
  <% end %>
</div>
<%= render 'part2' %>