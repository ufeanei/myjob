<% @page_title = 'Frakt-Tilbakestill passord'%>

<div class="row">
<div class="col-md-3 col-md-offset-4 well form-wrap">
  <h1 class= "text-center">Tilbakestill passord</h1>
    <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
      <%= render 'shared/errors', obj: @user %>

      <%= hidden_field_tag :email, @user.email %>
      <div class="form-group">
        <%= f.label :password, "Skriv inn nytt passord" %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, "Bekreft nytt passord" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>

      <%= f.submit "Send", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>