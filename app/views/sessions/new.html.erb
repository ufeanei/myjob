<div class="contain"> <!-- the class contain is found in jobs index page styles. it is to set overflow to auto-->
  <div class="well login-form col-md-4 col-md-offset-4">
    <h3 class="text-center">Login</h3>
    <%= form_tag '/login', method: :post do %>
   
      <input type="text" style="display:none"> <!-- hidden inputs added to cancel autocomplete -->
      <input type="password" style="display:none">

      <div class="form-group">
        <%= label_tag :email %>
        <%= text_field_tag :email, nil, class: 'form-control'  %>
      </div>
      <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, class: 'form-control'  %>
      </div>
      <div class="form-group">
        <%= check_box_tag 'remember' %> Remember me
      </div>
        
      <%= submit_tag "Login", class: "btn btn-default btn-block register-button" %> 
      <hr class="hr-new-user"/>  
      <%= link_to 'Forgot password', new_password_reset_path %>
      <h4>New user? <%= link_to 'Register here', new_user_path%></h4>  
    <% end %>
  </div>
</div>