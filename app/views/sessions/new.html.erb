<% @page_title = 'Frakt -Logg inn' %>

<div class="contain"> <!-- the class contain is found in jobs index page styles. it is to set overflow to auto-->
  <div class="well login-form col-md-4 col-md-offset-4">
    <h3 class="text-center">Logg inn</h3>
    <%= form_tag '/login', method: :post do %>
   
      <input type="text" style="display:none"> <!-- hidden inputs added to cancel autocomplete -->
      <input type="password" style="display:none">

      <div class="form-group">
        <%= label_tag :email, 'E-post' %>
        <%= text_field_tag :email, nil, class: 'form-control'  %>
      </div>
      <div class="form-group">
        <%= label_tag :password, 'Passord' %>
        <%= password_field_tag :password, nil, class: 'form-control'  %>
      </div>
      <div class="form-group">
        <%= check_box_tag 'remember' %> Husk meg
      </div>
        
      <%= submit_tag "Logg inn", class: "btn btn-default btn-block register-button" %> 
      <hr class="hr-new-user"/>  
      <%= link_to 'Glemt passord?', new_password_reset_path %>
      <h4>Ny bruker? <%= link_to 'Registrer deg her', new_user_path%></h4>  
    <% end %>
  </div>
</div>