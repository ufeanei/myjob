$("#total-jobs").html("<%= @total %>");

$(".pagin").html(" <%=j( will_paginate @jobs, renderer: BootstrapPagination::Rails, previous_label: '<', next_label:'>' )%>");

$('.pagination a').attr('data-remote', 'true');
$(".jobs-list").html("<%= j (render 'index_page_jobs_list') %>");

<% @fylkes.each do |fylke| %>
  $('#fylke-<%=fylke.id %>').html("(<%= jobs_per_fylke(@all_jobs, @jobs_by_cat, fylke.id)%>)");
<% end %>
<% @categories.each do |cat| %>
  $('#cat-<%=cat.id %>').html("(<%= jobs_per_category(@all_jobs, @jobs_by_fylke, cat.id)%>)"); 
<% end %>



 
