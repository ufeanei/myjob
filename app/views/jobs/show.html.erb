<div class="correct-row-style"> <!-- this first div is added to correct positioning effects from the bootstrap class="row" styles  --> 
  <div class="row  col-lg-6 col-lg-offset-3 col-md-10 col-sm-10 col-sm-offset-1 col-md-offset-1" id="container">
    <div class="toppanel">
      <br>
      <br>
    </div><!--end of toppanel-->
    <div class="wrapper">
      <div class="job-main-details col-sm-7 col-md-8 col-xs-12">
        <h2><%= @job.title.capitalize %></h2>
        <div>
          <%= image_tag(@job.image_url(:trial), class: 'img-responsive cover-image') %>
        </div>
        <h3>Description</h3>
        <p><%= @job.description %> </p>
        <br/>
        <h3>Directions</h3>
        <p><%= @job.street_addr %> <strong>  To  </strong> <%= @job.destination_addr%> </p>   
        <%= image_tag(@job.image_url(:trial), class: 'img-responsive thumbnail') %> 
        <p class="row col-md-12 col-xs-12"><em>Modified: <%= display_datetime(@job.updated_at)%> </em></p>        
      </div>

      <div class="side-info col-md-4 col-sm-5 col-xs-12 "> 
        <div class="apply-section well">
          <h3 class="text-center">Pris: <strong>1120kr</strong></h3>
          <br/>
          <ul>
            <li class="col-md-12 col-xs-12">
              <div class="row">
                <div class="col-md-5 col-xs-5">Annonsør:</div>
                <div class="col-md-7 col-xs-5"><%= full_name(@job.user).capitalize %></div>
              </div>
            </li>
            <li class="col-md-12 col-xs-12">
              <div class="row">
                <p class="col-md-5 col-xs-5">Phone:</p>
                <p class="col-md-7 col-xs-5"><%= @job.contact_number %></p>
              </div>
            </li>
          </ul>
          <br/> 
          <% if @job.status == 'active' %>
          <h4 >status: <strong class="status">Job not yet awarded</strong></h4>
          <br/>
          <%= link_to 'Apply to help',  job_job_applications_path(@job, user_id: current_user ), method: 'post', class: "btn btn-block btn-primary" %>  
          <% elsif @job.status == 'inactive' %>
           <h4 >status: <strong class="status">Inactive</strong></h4>
           <p>Job already awarded</p>
           <% end %>
        </div>
        <div class="applicants-div well">
          <% if @job.status == 'active' %>
            <% if @all_applications.empty? %>
              <p><strong>Ingen hjelpere. Bli den første hjelperen </strong></p>
            <% else %>
              <h4 class="text-center"><%= @all_applications.size %> Hjepere</h4>
             
              <ul> 
                <div class="row">
                <% @all_applications.each do |appli| %>
                  <li class="col-md-6 col-xs-6">
                    <div class="text-center">
                      <%= image_tag(appli.user.image_url(:thumb), class: 'img-responsive img-circle') %>
                      <%= link_to "#{appli.user.first_name}", user_path(appli.user) %>
                    </div>  
                  </li>
                <% end %>
              </div>
              </ul>
            <% end %>
          <% end %> 
        </div><!--end of applicants-div-->  
        <div class="similar-jobs well">
          <h4 class="text-center"><%=@job.fylke.name.upcase %> JOBS</h4>
          <br>
          <% @same_location_jobs.each do |job| %>
            <% if job.id != @job.id %>
              <div>
                <h5><%= link_to job.title.capitalize, job_path(job) %></h5>
                <p><%= job.fylke.name %><strong class='pull-right'><%= job.payment %>kr</strong></p>
              </div>
            <% end %>
          <% end %>
        </div><!-- end of similar jobs-->
      </div><!-- end of job main details--> 
    </div> <!-- end of wrapper-->       
  </div>
</div>



   
 