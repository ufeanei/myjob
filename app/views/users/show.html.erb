<div class="contain wrapping">
  <div class="col-md-6 col-md-offset-3 well wrap">
 <div id="about-me">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-3">
          <% if @user.image? %>
            <%= image_tag(@user.image_url(:thumb), class: "thumbnail img-responsive user-pic") %>
          <% else %>
            <%= image_tag('pages/default-user.jpg', class: 'img-responsive thumbnail user-pic') %>
          <% end %>
        </div>
        <div class="col-md-6">
          <h4><%= @user.first_name.capitalize %></h4>
          <h4><%= @user.kommune.name if @user.kommune %></h4>
          <p> stars here </p>
          <p> (7 ratings) </p>
        </div>
        <div class="col-md-3 text-center">
          <h4>Jobs Completed</h4>
          <h4> <strong><%= @appli_won.size %></strong> </h4>
        </div>
        <div class="col-md-12">
          <h3 class="text-center">About me</h3>
          <p><%= @user.user_self_description %></p>
        </div>
      </div>
    </div>
        
    </div >
    <div class="job-review-segment">
      <h3 class="text-center">Jobs Completed</h3>
      <% @appli_won.each do |appl| %>
        <div>
          <h3><%= link_to "#{appl.job.title.capitalize}", job_path(appl.job), id: "#{appl.id}" %></h3>
            <% appl.reviews.each do |review| %>
              <div class="row">
                <div class="col-md-2 col-xs-3">
                  <% if review.user.image? %>
                    <%= image_tag(review.user.image_url(:thumb), class: "img-circle img-responsive") %>
                  <% else %>
                    <%= image_tag('pages/default-user-thumb.jpg', class: 'img-responsive img-circle') %>
                  <% end %>
                </div>
                <div class= "col-md-10 col-xs-9 review">                 
                  <strong><%= review.user.first_name %></strong> 
                  <% if appl.user == review.user %>
                   (Hjelper)
                  <% else %>
                   (Jobeier)
                  <% end %>  
                  <br>
                  <em><%= review.comment.capitalize %></em>  
                </div>
              </div>
              <br>
            <% end %>        
          <% if (current_user == appl.job.user) || (current_user == appl.user )%> <!---only jobowner or applicant can see the comment form and submit comment -->
            <%= form_for [ appl.job, appl, @review ] do |f| %>
            <div class = "form-group">
              <%= f.label :comment %>
              <%= f.text_area :comment, class: "form-control" %>
              <%= hidden_field_tag 'user_id', "#{@user.id}" %>  <!-- You need the user_id in the review create action. study its use in that action -->
            </div>
              <%= f.submit "Post", class: "btn edit-btn" %>
            <% end %>
          <% end %>
        </div>
      <% end %>      
    </div>
  </div>
</div>

 
 